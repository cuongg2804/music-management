header.header
  .container
    .row.align-items-center
      .col-3
        .inner-logo
          a(href="/")
            img(src="/client/image/logo.jpg", alt="Logo")
      .col-5
        .box-search
          form(
            action="/search/result"
            method="GET"
          )
            div(class="form-group d-flex mb-0")
              input(
                type="text"
                placeholder="Nhập từ khóa..."
                class="form-control"
                name="keyword"
                value=keyword
              )
              button(
                type="submit"
                class="btn btn-primary"
              ) Tìm
          .inner-suggest.show
            .inner-list
             

      .col-4
        .inner-menu
          ul
            li
              i(class="fa-solid fa-house" style="color: #1086e0;")
              a(href="/")  Trang chủ
            li
              <i class="fa-solid fa-music" style="color: #1086e0;"></i>
              a(href="/topics")  Chủ đề